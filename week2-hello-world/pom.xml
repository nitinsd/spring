<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.apress.prospring5.ch2</groupId>
  <artifactId>hello-world</artifactId>
  <packaging>jar</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>hello-world</name>
  
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <spring.version>5.0.2.RELEASE</spring.version>
    <slf4j.log4j.version>1.7.6</slf4j.log4j.version>
	<junit.version>4.11</junit.version>
  </properties>
  <dependencies>
      <dependency>
          <groupId>org.springframework</groupId>
          <artifactId>spring-context</artifactId>
          <version>${spring.version}</version>
      </dependency>
      <dependency>
          <groupId>org.slf4j</groupId>
          <artifactId>slf4j-log4j12</artifactId>
          <version>${slf4j.log4j.version}</version>
      </dependency> 
	  <dependency>
          <groupId>junit</groupId>
          <artifactId>junit</artifactId>
          <version>${junit.version}</version>
      </dependency>
  </dependencies>
  <build>
    <plugins>
    <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.7.0</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
	  <plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-shade-plugin</artifactId>
		<version>3.1.0</version>
		<executions>
			<execution>
				<phase>package</phase>
				<id>spring-annotated</id>
				<goals>
					<goal>shade</goal>
				</goals>
				<configuration>
					<transformers>
						<transformer
							implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
							<mainClass>com.apress.prospring5.ch2.annotated.HelloWorldSpringAnnotated</mainClass>
						</transformer>
					</transformers>
					<finalName>spring-annotated</finalName>
				</configuration>
			</execution>
			<execution>
				<phase>package</phase>
				<id>decoupled</id>
				<goals>
					<goal>shade</goal>
				</goals>
				<configuration>
					<transformers>
						<transformer
							implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
							<mainClass>com.apress.prospring5.ch2.decoupled.HelloWorldDecoupled</mainClass>
						</transformer>
					</transformers>
					<finalName>decoupled</finalName>
				</configuration>
			</execution>
			<execution>
				<phase>package</phase>
				<id>decoupled-with-factory</id>
				<goals>
					<goal>shade</goal>
				</goals>
				<configuration>
					<transformers>
						<transformer
							implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
							<mainClass>com.apress.prospring5.ch2.decoupled.HelloWorldDecoupledWithFactory</mainClass>
						</transformer>
					</transformers>
					<finalName>decoupled-with-factory</finalName>
				</configuration>
			</execution>
			<execution>
				<phase>package</phase>
				<id>hello_world</id>
				<goals>
					<goal>shade</goal>
				</goals>
				<configuration>
					<transformers>
						<transformer
							implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
							<mainClass>com.apress.prospring5.ch2.HelloWorld</mainClass>
						</transformer>
					</transformers>
					<finalName>hello_world</finalName>
				</configuration>
			</execution>
			<execution>
				<phase>package</phase>
				<id>hello-world-spring-di</id>
				<goals>
					<goal>shade</goal>
				</goals>
				<configuration>
					<transformers>
						<transformer implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
							<resource>META-INF/spring.handlers</resource>
						</transformer>
						<transformer implementation="org.apache.maven.plugins.shade.resource.AppendingTransformer">
							<resource>META-INF/spring.schemas</resource>
						</transformer>
						<transformer
							implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
							<mainClass>com.apress.prospring5.ch2.HelloWorldSpringDI</mainClass>
						</transformer>
					</transformers>
					<finalName>hello-world-spring-di</finalName>
				</configuration>
			</execution>
			<execution>
				<phase>package</phase>
				<id>hello-world-cmd</id>
				<goals>
					<goal>shade</goal>
				</goals>
				<configuration>
					<transformers>
						<transformer
							implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
							<mainClass>com.apress.prospring5.ch2.HelloWorldWithCommandLine</mainClass>
						</transformer>
					</transformers>
					<finalName>hello-world-cmd</finalName>
				</configuration>
			</execution>
		</executions>
	  </plugin>
    </plugins>
  </build>  
</project>
